terraform {
    required_version = "{{ .Version }}"

    required_providers {
      aws = {
        version = "~> 3.0"
      }
    }

    backend "s3" {
        region         = "{{ .Region }}"
        bucket         = "{{ .Bucket }}"
        encrypt        = "true"
        key            = "{{ .TeamName }}/{{ .EnvName }}/{{ .ComponentName }}/terraform.tfstate"
        profile        = "{{ .Profile }}"
        dynamodb_table = "{{ .DynamoDBTable }}"
    }
}
