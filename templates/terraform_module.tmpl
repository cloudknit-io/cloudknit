module "{{ .ComponentName }}" {
    source = "{{ .Source }}//{{ .Path }}"
{{- range .Variables }}
    {{- if .ValueFrom }}
    {{ .Name }} = {{ .ValueFrom }}
    {{- else }}
    {{ .Name }} = {{ .Value }}
    {{- end }}
{{- end }}
{{- template "tfvars" . }}
}

{{- define "tfvars" }}
{{- if .VariablesFile }}
{{ .VariablesFile }}
{{- end }}
{{- end }}

